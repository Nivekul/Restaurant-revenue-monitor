html {
  height: 100%;
}

body {
  height: 100%;
  /*background-color: rgb(28,27,32);*/
  background: -webkit-linear-gradient(#1C1B20, #383640);
}

.wrapper {
  margin: 4%;
  border-radius: 8px;
  box-shadow: 0 0 10px 0px rgba(0, 0, 0, 0.5);
  background-color: white;
  overflow: hidden;
}

.header-pic {
  width: 100%;
}

.form-header {
  height: 300px;
  background: url('../img/store.jpg') center no-repeat;
  background-size: cover;
  background-image: -webkit-linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.9)), url('../img/store.jpg');
  display: flex;
  align-items: flex-end;
  padding: 15px 32px 15px 32px;
}

.wrapper-header {
}

.wrapper-form {
  padding: 5px 32px 20px 32px;
}

.wrapper-submit {
  margin-top: auto;
}

select {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

input[type='text'] {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

.input-group-addon {
  background-color: white;
  border-radius: 0;
  border-top: 0;
  border-left: 0;
}

.form-control {
  box-shadow: none;
  -webkit-box-shadow: none;
  border-radius: 0;
  border-top: 0;
  border-left: 0;
  border-right: 0;
}

.form-control:focus {
  box-shadow: none;
  -webkit-box-shadow: none;
  border-color: #ccc;
}

.fa {
  color: #E4024E;
}

.submit {
  padding: 14px 20px;
  border-radius: 0px;
  border-color: transparent;
  background-color: #E4024E;
}

.select-disabled {
  color: #999;
}

.form-location {
  color: white;
}

.radio {
  margin-top: 7px;
  margin-bottom: 15px;
  padding-left: 0px;
}

.form-name {
  padding-right: 0;
}

.form-gender {
  padding-bottom: 6px;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: flex-end;
}
