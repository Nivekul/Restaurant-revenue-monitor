body {
  height: 100%;
  background-color: pink;
}

label {
  margin-bottom: 0px;
  background-color: lightgrey;
}

input[type='text'], input[type='number'], input[type='tel'] {
  appearance: none;
  box-shadow: none;
  border-radius: 0px;
  border: none;
  border-bottom: 1px solid black;
  outline: none;
  background-color: rgba(255,255,255,0.5);
}

input:focus {
  outline: none;
}

.form_input {
  margin: 0 auto 20px auto;
}

input[type="submit"] {
  margin: 0 auto;
}

.wrapper {
  margin: 4%;
}
